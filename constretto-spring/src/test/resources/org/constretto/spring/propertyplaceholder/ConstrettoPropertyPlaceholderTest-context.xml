       http://constretto.org/schema/constretto http://constretto.org/schema/constretto/constretto-1.0.xsd">

  <constretto:configuration>
    <constretto:stores>
      <constretto:properties-store>
        <constretto:resource location="classpath:properties/test1.properties"/>
      </constretto:properties-store>
    </constretto:stores>
  </constretto:configuration>

  <bean id="testbean" class="org.constretto.spring.propertyplaceholder.helper.TestBean">
    <constructor-arg value="${aCoolService}"/>
    <property name="url" value="${aCoolUrl}"/>
    <property name="getMeDefault" value="${notHere:default}"/>
  </bean>


</beans>