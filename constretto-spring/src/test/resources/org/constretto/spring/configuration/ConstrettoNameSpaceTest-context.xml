<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:constretto="http://constretto.org/schema/constretto"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.5.xsd
           http://constretto.org/schema/constretto
           http://constretto.org/schema/constretto/constretto.xsd">

    <constretto:configuration property-placeholder="false">
        <constretto:stores>
            <constretto:properties-store>
                <constretto:resource location="classpath:properties/test1.properties"/>
                <constretto:resource location="classpath:properties/non-existing.properties"/>
            </constretto:properties-store>
            <constretto:object-store>
                <constretto:object class="org.constretto.spring.configuration.helper.MyConfigurationSource"/>
                <constretto:object class="org.constretto.spring.configuration.helper.MyOtherConfigurationSource"/>
            </constretto:object-store>
            <constretto:ini-store>
                <constretto:resource location="classpath:properties/test1.ini"/>
                <constretto:resource location="classpath:properties/non-existing.ini"/>
            </constretto:ini-store>
            <constretto:system-properties-store/>
        </constretto:stores>
    </constretto:configuration>


</beans>